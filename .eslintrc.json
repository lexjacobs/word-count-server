{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    /*  1 signifies severity level of 'warning', and 2 signifies a spacing of 2 characters */
    "indent": [
      1,
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": [0],
    "quotes": [
      "error",
      "single"
    ],
    "react/prop-types": [0],
    "semi": [
      "error",
      "always"
    ]
  }
}
